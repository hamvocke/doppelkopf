{
  "name": "doppelkopf",
  "version": "0.0.1",
  "private": true,
  "description": "doppelkopf card game in your browser",
  "author": "Ham Vocke <hermann.vocke@gmail.com>",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "lint": "vue-cli-service lint",
    "test:ci": "vue-cli-service test:unit --maxWorkers=2 --collectCoverage=true",
    "test:debug": "node --inspect-brk node_modules/.bin/vue-cli-service test:unit --no-cache --watch --runInBand"
  },
  "dependencies": {
    "@sentry/browser": "^6.1.0",
    "@sentry/integrations": "^6.1.0",
    "@sentry/tracing": "^6.1.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "core-js": "^3.8.3",
    "lodash-es": "^4.17.15",
    "node-fetch": "^2.6.1",
    "register-service-worker": "^1.7.2",
    "vue": "^2.6.12",
    "vue-class-component": "^7.2.3",
    "vue-clickaway": "^2.2.2",
    "vue-feather-icons": "^5.1.0",
    "vue-i18n": "^8.22.4",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@kazupon/vue-i18n-loader": "^0.5.0",
    "@types/jest": "^24.0.19",
    "@types/lodash-es": "^4.17.4",
    "@types/uuid": "^8.3.1",
    "@types/vue-clickaway": "^2.2.0",
    "@types/vue-feather-icons": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "~4.5.13",
    "@vue/cli-plugin-e2e-nightwatch": "~4.5.13",
    "@vue/cli-plugin-eslint": "~4.5.13",
    "@vue/cli-plugin-pwa": "~4.5.13",
    "@vue/cli-plugin-router": "~4.5.13",
    "@vue/cli-plugin-typescript": "~4.5.13",
    "@vue/cli-plugin-unit-jest": "~4.5.13",
    "@vue/cli-service": "~4.5.13",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "@vue/test-utils": "1.1.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.4",
    "babel-preset-vue": "^2.0.2",
    "chromedriver": "^91.0.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "fetch-mock-jest": "^1.5.1",
    "node-sass": "^4.9.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.0",
    "prettier": "^1.19.1",
    "ts-jest": "^26.5.1",
    "typescript": "~3.9.3",
    "vue-cli-plugin-i18n": "^0.6.0",
    "vue-jest": "^3.0.7",
    "vue-loader": "^15.7.1",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/recommended",
      "@vue/prettier",
      "@vue/typescript"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      },
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-cssnext": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!lodash-es)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.test.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/",
    "preset": "@vue/cli-plugin-unit-jest/presets/typescript-and-babel"
  }
}
